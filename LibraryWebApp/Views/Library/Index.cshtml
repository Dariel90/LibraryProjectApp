@model IEnumerable<LibraryWebApp.Models.BookData>

@{
    ViewData["Title"] = "Index";
}

    <h1>Bookshelf</h1>

<p>
    <a asp-action="Create">Add New Book</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Isbn)
            </th>
            <th align="center">
                @Html.DisplayNameFor(model => model.IsBorrowed)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Isbn)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.IsBorrowed)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                @Html.ActionLink("Create Loan", "CreateLoan", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
